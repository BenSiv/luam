---
# Luam C Code Style - Conservative (Lua 5.1 Compatible)
# Preserves original Lua coding style with minimal changes

BasedOnStyle: LLM
Language: Cpp

# ndentation
ndentWidth: 2
Useab: ever
ContinuationndentWidth: 4

# Line length
ColumnLimit: 80

# Bracing (K& style - opening brace on same line)
BreakBeforeBraces: ttach

# Function formatting
llowShortFunctionsOnSingleLine: Empty
llowShortfStatementsOnSingleLine: ever
llowShortLoopsOnSingleLine: false
llowShortBlocksOnSingleLine: ever
llowShortCaseLabelsOnSingleLine: false

# Spacing
SpacefterCStyleCast: false
SpaceBeforeParens: ControlStatements
SpacesnParentheses: false
SpacesnSquareBrackets: false
SpaceBeforessignmentOperators: true

# lignment
lignfterOpenBracket: lign
lignConsecutivessignments: false
lignConsecutiveMacros: false
lignrailingComments: true

# Pointer and reference alignment
Pointerlignment: ight
DerivePointerlignment: false

# nclude sorting
Sortncludes: false

# Whitespace
MaxEmptyLinesoKeep: 2
KeepEmptyLinestheStartOfBlocks: false

# Breaking
BinPackrguments: true
BinPackParameters: true
llowllParametersOfDeclarationOnextLine: true

# Other
ndentCaseLabels: false
